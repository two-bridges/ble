{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2015", //es2017 for angular14, but we're retaining async/await here
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ],
            "@/*": [
                "src/*"
            ]
        },
        "removeComments": false
    },
    "angularCompilerOptions": {
        "strictTemplates": true
    },
    "include": [
        "./src/**/*.ios.ts",
        "./src/**/*.android.ts"
    ],
    "files": [
        "./src/main.ts",
        "./references.d.ts",
        "./src/polyfills.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}